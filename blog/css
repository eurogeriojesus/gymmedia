    overflow: hidden; /* Evita que o conteúdo ultrapasse os limites */
}

.frase-banner {
    position: relative; /* Permite posicionar o gif dentro do banner */
    width: 100%; /* Garante que o gif ocupe toda a largura do banner */
    height: 100vh; /* Faz com que o banner tenha a altura da tela inteira */
    background: url('colagem.gif') no-repeat center center fixed; /* Define o gif como plano de fundo */
    background-size: cover; /* Garante que o gif cubra todo o elemento */
}

.frase-banner h1 {
    font-weight: 800; /* Definindo o peso da fonte como bold */
    font-size: 2em; /* Aumenta o tamanho da fonte */
    position: absolute; /* Permite posicionar o texto sobre o gif */
    top: 50%; /* Alinha o texto verticalmente no centro */
    left: 50%; /* Alinha o texto horizontalmente no centro */
    transform: translate(-50%, -50%); /* Centraliza o texto */
}

